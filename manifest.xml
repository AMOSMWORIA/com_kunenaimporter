<install type="component" version="1.5.0" method="upgrade">
    <name>Kunena Importer</name>
    <creationDate>2009-07-20</creationDate>
    <author>Matias Griese</author>
    <authorEmail>matias@kunena.com</authorEmail>
    <authorUrl>http://www.kunena.com</authorUrl>
    <copyright>(C) 2009 www.kunena.com All rights reserved</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <version>0.2.9</version>
    <description>
		Imports external forum data (Kunena, phpBB3, phpBB2, PNphpBB2) into Kunena Forum.
    </description>

    <!-- installation part -->
    <installfile>install.kunenaimporter.php</installfile>
    <uninstallfile>uninstall.kunenaimporter.php</uninstallfile>

    <install>
        <queries>
        </queries>
    </install>
    
    <uninstall>
        <queries>
        </queries>
    </uninstall>

    <!-- administration part -->
	<administration>

		<menu task="default" img="js/ThemeOffice/component.png">Kunena Forum Importer</menu>
		<!--
			<submenu> <menu link="option=com_kunenaimporter">Kunena Forum
			Importer</menu> </submenu>
		-->

		<files>
			<filename>manifest.xml</filename>
		</files>
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>admin.kunenaimporter.php</filename>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>assets</folder>
			<folder>install</folder>
		</files>

		<languages folder="lang/en-GB">
			<language tag="en-GB">en-GB.com_kunenaimporter.menu.ini</language>
			<language tag="en-GB">en-GB.com_kunenaimporter.ini</language>
		</languages>

	</administration>

    <params>
    </params>

</install>